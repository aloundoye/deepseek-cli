<idea-plugin>
    <id>com.deepseek.ide</id>
    <name>DeepSeek CLI</name>
    <vendor email="support@deepseek.com">DeepSeek</vendor>

    <description><![CDATA[
        IntelliJ integration for DeepSeek CLI JSON-RPC over stdio.
        Provides chat, diff viewer, and session management.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="DeepSeek" displayType="BALLOON" isLogByDefault="true"/>
        <toolWindow id="DeepSeek"
                    anchor="right"
                    secondary="false"
                    factoryClass="com.deepseek.ide.DeepSeekToolWindowFactory"
                    icon="AllIcons.Actions.Execute"/>
    </extensions>

    <actions>
        <group id="DeepSeek.Menu" text="DeepSeek" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action id="DeepSeek.Status"
                    class="com.deepseek.ide.DeepSeekStatusAction"
                    text="Status"
                    description="Check DeepSeek RPC server status"/>
            <action id="DeepSeek.Chat"
                    class="com.deepseek.ide.DeepSeekChatAction"
                    text="Chat"
                    description="Send a prompt to DeepSeek"/>
            <action id="DeepSeek.Diff"
                    class="com.deepseek.ide.DeepSeekDiffAction"
                    text="View Patch Diff"
                    description="Preview a patch diff from DeepSeek"/>
        </group>
    </actions>
</idea-plugin>
