{
  "name": "deepseek-vscode",
  "displayName": "DeepSeek CLI",
  "description": "VS Code bridge for DeepSeek CLI JSON-RPC with chat panel.",
  "version": "0.0.2",
  "publisher": "deepseek",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:deepseek.startServer",
    "onCommand:deepseek.status",
    "onCommand:deepseek.openChat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "DeepSeek",
      "properties": {
        "deepseek.ide.binaryPath": {
          "type": "string",
          "default": "deepseek",
          "description": "Path to the deepseek CLI binary."
        },
        "deepseek.ide.autoAcceptEdits": {
          "type": "boolean",
          "default": false,
          "description": "Automatically accept all file edits without review."
        }
      }
    },
    "commands": [
      {
        "command": "deepseek.startServer",
        "title": "DeepSeek: Start RPC Server"
      },
      {
        "command": "deepseek.status",
        "title": "DeepSeek: Status"
      },
      {
        "command": "deepseek.openChat",
        "title": "DeepSeek: Open Chat"
      },
      {
        "command": "deepseek.sessionList",
        "title": "DeepSeek: List Sessions"
      },
      {
        "command": "deepseek.forkSession",
        "title": "DeepSeek: Fork Session"
      },
      {
        "command": "deepseek.showDiff",
        "title": "DeepSeek: Show Diff"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.5.4"
  }
}
